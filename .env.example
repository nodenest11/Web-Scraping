# =============================================================================
# ENHANCED WEB SCRAPING API CONFIGURATION
# =============================================================================

# Choose Scraper Engine
# ===================
# Set to 'true' to use Enhanced Undetected Chrome (recommended for avoiding CAPTCHAs)
# Set to 'false' to use original Playwright scraper
USE_UNDETECTED_CHROME=true

# =============================================================================
# üõ°Ô∏è MAXIMUM CAPTCHA AVOIDANCE SETTINGS
# =============================================================================

# Enhanced Stealth Mode
ULTRA_STEALTH_MODE=true
ENABLE_JAVASCRIPT=true
RANDOM_VIEWPORT=true
MOCK_HARDWARE=true

# Human Behavior Simulation
MIN_DELAY=3.0
MAX_DELAY=7.0
TYPING_DELAY_MIN=0.05
TYPING_DELAY_MAX=0.15

# Anti-Fingerprinting
RANDOM_USER_DATA_DIR=true
BLOCK_WEBRTC=true
SPOOF_TIMEZONE=true

# Proxy Configuration
# ==================
# Add your proxy list separated by commas
# Format: http://username:password@host:port or http://host:port
# Example: PROXY_LIST=http://user:pass@proxy1.com:8080,http://user:pass@proxy2.com:8080
PROXY_LIST=

# Individual proxy credentials (if all proxies use same credentials)
PROXY_USERNAME=
PROXY_PASSWORD=

# Delay Configuration (seconds)
# ============================
# Random delays between actions to appear more human-like
MIN_DELAY=2.0
MAX_DELAY=5.0
TYPING_DELAY_MIN=0.1
TYPING_DELAY_MAX=0.3

# Browser Configuration
# ====================
# Set to 'true' for production, 'false' for debugging
HEADLESS_MODE=true

# Window size for browser (width,height)
WINDOW_SIZE=1920,1080

# API Configuration
# ================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=production

# Performance Settings
# ===================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
BROWSER_TIMEOUT=45

# Custom User Agents (optional)
# =============================
# Leave empty to use built-in list, or provide comma-separated custom user agents
CUSTOM_USER_AGENTS=

# Advanced Settings
# ================
# Enable JavaScript for content scraping (may slow down but get more content)
ENABLE_JAVASCRIPT=false

# Block images for faster loading
BLOCK_IMAGES=true

# Enable stealth mode (maximum anti-detection)
STEALTH_MODE=true

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=2
